<apex:page controller="HelloMonkeyController" showheader="false"
  contentType="text/xml"
  >{! '<?xml version=\"1.0\" encoding=\"UTF-8\"?>' }
<Response>
  <Say>Hello {!name}</Say>
  <Gather numDigits="1" action="hello_monkey_handle_key" method="POST">
        <Say>To speak to a real person, press 1.  Press any other key to start over.</Say>
    </Gather>
    </Response>
</apex:page>